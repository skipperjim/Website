extends layout

block content
    h1= title

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th Username
                    th Email
                    th Password
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                br
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserPassword(type='password', placeholder='Password')
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER